<script>
const code = '{{ code }}';

const savedData = sessionStorage.getItem(`tombola_player_${code}`);
if (savedData) {
    try {
        const player = JSON.parse(savedData);
        const firstNameInput = document.getElementById('firstName');
        const lastNameInput = document.getElementById('lastName');
        const emailInput = document.getElementById('email');
        const playerIdInput = document.getElementById('playerId');
        
        firstNameInput.value = player.firstName || '';
        lastNameInput.value = player.lastName || '';
        emailInput.value = player.email || '';
        playerIdInput.value = player.playerId || '';
        
        console.log('âœ¨ Formulaire prÃ©-rempli avec les donnÃ©es de session');
        
        if (player.firstName && player.lastName && player.email) {
            console.log('ðŸ”„ Reconnexion automatique avec playerId:', player.playerId);
            setTimeout(() => {
                document.getElementById('join-form').submit();
            }, 500);
        }
    } catch (e) {
        console.error('Erreur lors du chargement des donnÃ©es sauvegardÃ©es:', e);
    }
}

document.getElementById('join-form').addEventListener('submit', function(e) {
    const firstName = document.getElementById('firstName').value;
    const lastName = document.getElementById('lastName').value;
    const email = document.getElementById('email').value;
    const playerId = document.getElementById('playerId').value;
    
    sessionStorage.setItem(`tombola_player_${code}`, JSON.stringify({
        playerId,
        firstName,
        lastName,
        email
    }));
    
