{% extends 'base.html.twig' %}

{% block title %}Tombola - {{ code }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 h-screen flex flex-col">
    <div class="text-center mb-8">
        <h1 class="text-6xl font-bold text-white mb-2">üé∞ TOMBOLA</h1>
        <p class="text-2xl text-purple-200">Code: <span class="font-mono font-bold">{{ code }}</span></p>
    </div>

    <div class="flex-1 grid grid-cols-12 gap-6" id="board-container">
        <div class="col-span-9" id="main-board">
            <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 h-full">
                <div class="flex justify-between items-center mb-6" id="board-header">
                    <h2 class="text-3xl font-bold text-white">Round {{ round }}</h2>
                    <div class="text-2xl font-bold text-white">
                        <span id="player-count">{{ totalPlayers }}</span> player(s) connected
                    </div>
                </div>

                <div id="players-grid" class="grid grid-cols-5 gap-4 mb-6">
                    {% for player in players %}
                        <div class="player-card" data-player-id="{{ player.id }}">
                            <img src="{{ player.gravatarUrl }}" alt="{{ player.firstName }}" 
                                 class="w-20 h-20 rounded-full mb-2 border-4 border-white shadow-lg">
                            <p class="text-sm font-semibold text-gray-800">{{ player.firstName }}</p>
                            <p class="text-sm font-semibold text-gray-800">{{ player.lastName }}</p>
                        </div>
                    {% endfor %}
                </div>

                <div class="text-center mt-8" id="button-container">
                    <button id="start-round-btn" 
                            class="hidden bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white font-bold py-3 px-10 rounded-full text-xl shadow-2xl transform hover:scale-105 transition-all duration-200"
                            data-code="{{ code }}">
                        üöÄ Start Round!
                    </button>
                </div>
            </div>

            {% if winners|length > 0 %}
            <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 mt-6" id="previous-winners">
                <h3 class="text-2xl font-bold text-white mb-4">üèÜ Previous Winners</h3>
                <div class="flex flex-wrap gap-4">
                    {% for winner in winners %}
                        <div class="bg-yellow-500/20 border-2 border-yellow-400 rounded-lg p-3 flex items-center gap-3">
                            <img src="{{ winner.player.gravatarUrl }}" alt="{{ winner.playerName }}" 
                                 class="w-12 h-12 rounded-full border-2 border-yellow-400">
                            <div>
                                <p class="text-white font-semibold">{{ winner.playerName }}</p>
                                <p class="text-yellow-200 text-sm">Round {{ winner.round }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>

        <div class="col-span-3" id="qr-section">
            <div class="bg-white rounded-2xl p-6 text-center shadow-2xl sticky top-8">
                <h3 class="text-2xl font-bold text-gray-800 mb-4">üì± Scan to Join</h3>
                <img src="{{ qrCode }}" alt="QR Code" class="w-full max-w-xs mx-auto mb-4 rounded-lg shadow-lg">
                <p class="text-sm text-gray-600 break-all font-mono">{{ joinUrl }}</p>
            </div>
        </div>
    </div>
    
    <button id="fullscreen-btn" 
            data-code="{{ code }}">
        üñ•Ô∏è Fullscreen
    </button>
    
    <button id="next-round-btn" 
            class="hidden"
            data-code="{{ code }}">
        ‚û°Ô∏è Next Round
    </button>
</div>

<script>
const code = '{{ code }}';
const mercureUrl = '{{ mercure_public_url }}';
const mercureToken = '{{ mercure_token }}';
</script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/board.js') }}"></script>
{% endblock %}
